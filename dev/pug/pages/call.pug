extends ../template/main

block variables
	- var title = 'Главная страница'
	- var pageClass = 'secondary-page'
block content
	.container.pt-5
		.row
			.col-12.col-lg-6
				.embed-responsive.embed-responsive-4by3
					img.embed-responsive-item.d-flex.img-embed(src='img/content/page.jpg')
			.col-12.col-lg-6
				.accent-block.accent-block--translated
					h1.section-title.text-left.mb-5 Вызов страхового помощника
					.subtitle.subtitle--slim.subtitle--toggle.pb-3 Страховой помощник – новый уровень сервиса для пострадавших в ДТП
					p.slide-block Специалисты «Страхового помощника» готовы приехать к Вам по месту лечения, разъяснить основные права потерпевших в дорожно-транспортных происшествии, рассказать о порядке и сроках получения страхового возмещения, о праве на компенсацию морального вреда, этапах расследования административных / уголовных дел.
					.subtitle Преимущества сотрудничества
					ul.accent-block__list
						li Возможность получения выплаты в период нахождения на лечении
						li Экономия времени на получение страхового возмещения
						li Гарантированный контроль соблюдения Ваших прав
	section.about
		.container.pt-5
			h1.section-title Оформление выплаты через «Страхового помощника» 
			.row.pt-4
				.col-12.col-lg-4.mb-5.mb-lg-0(data-aos-once="true" data-aos="fade-up" data-aos-duration="800" data-aos-delay="200")
					.step-item
						.step-item__num 01
						h5.section-title.text-left.mb-5 Встреча
						ul.step-item__list.accent-block__list
							li Информирование о деятельности «Страхового помощника» в сфере оказания правовых услуг экономия времени на получение страхового возмещения
							li Разъяснение прав застрахованных
				.col-12.col-lg-4.mb-5.mb-lg-0(data-aos-once="true" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600")
					.step-item
						.step-item__num 02
						h5.section-title.text-left.mb-5 Заключение договора
						ul.step-item__list.accent-block__list
							li Оформление договора с рассрочкой платежа до момента зачисления страховой выплаты
							li Оформление простой рукописной доверенности на сбор документов
				.col-12.col-lg-4.mb-5.mb-lg-0(data-aos-once="true" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1000")
					.step-item
						.step-item__num 03
						h5.section-title.text-left.mb-5 Получение выплаты
						ul.step-item__list.accent-block__list
							li Информирование об этапах работы
							li Информирование о сраках получения выплаты
	section.credit.pb-0
		.container
			.row
				.col-lg-6.credit-content.text-center
					h1.section-title.mb-5 Рассрочка платежа
					p.text-center.pb-3 Оформление договора с рассрочкой платежа<br>до момента зачисления страховой выплаты
					.btn.px-5 вызвать стразового <br>помощника
				.col-6.d-none.d-lg-block
					.credit-image
	div(class="callback-btn align-items-center justify-content-center text-center btn-modal open-modal" href='#', data-modal='#modal1') SOS<br>ДТП
